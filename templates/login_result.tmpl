 <!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    {{ if .Error }}
    <title>Login failed</title>
    {{ else }}
    <title>Login successful</title>
    {{ end }}
    <style>
    </style>
  </head>
  <body>
    <main>
    {{ if .Error }}
      <h1>Login failed</h1>
      <p>{{ .Error }}</p>
    {{ else }}
      <h1>Login successful</h1>
      {{ if .User }}
        <p>User: {{ .User.Name }}</p>
        <p>Groups: </p>
	<ul>
	  {{ range .User.Groups }}
	  <li>{{ . }}</li>
	  {{ end }}
	</ul>
      {{ end }}
    {{ end }}
    </main>
  </body>
</html> 
